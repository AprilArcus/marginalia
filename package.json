{
  "name": "marginalia",
  "version": "0.0.1",
  "description": "experiments with react.js",
  "config": {
    "browserify_args": "src/js/main.jsx --transform 6to5ify --global-transform uglifyify --debug",
    "bundle_js_tmp_path": "tmp/bundle.js.tmp"
  },
  "scripts": {
    "test": "echo \"Error: no test specified\" && exit 1",
    "build:scripts": "npm run build:scripts:browserify --loglevel=silent | npm run build:scripts:extract-source-map",
    "build:scripts:browserify": "browserify $npm_package_config_browserify_args",
    "build:scripts:extract-source-map": "exorcist build/bundle.js.map > build/bundle.js",
    "watch:scripts": "npm run watch:scripts:watchify & npm run watch:scripts:watch-source-map",
    "watch:scripts:watchify": "watchify $npm_package_config_browserify_args -v --outfile $npm_package_config_bundle_js_tmp_path",
    "watch:scripts:watch-source-map": "touch $npm_package_config_bundle_js_tmp_path; onchange $npm_package_config_bundle_js_tmp_path -- npm run watch:scripts:extract-source-map",
    "watch:scripts:extract-source-map": "< $npm_package_config_bundle_js_tmp_path npm run build:scripts:extract-source-map"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/AprilArcus/marginalia.git"
  },
  "author": "April Arcus",
  "license": "MIT license",
  "bugs": {
    "url": "https://github.com/AprilArcus/marginalia/issues"
  },
  "homepage": "https://github.com/AprilArcus/marginalia",
  "dependencies": {
    "react": "latest"
  },
  "devDependencies": {
    "envify": "^3.2.0",
    "lodash": "^2.4.1",
    "gulp": "^3.8.10",
    "vinyl-source-stream": "^1.0.0",
    "vinyl-buffer": "^1.0.0",
    "del": "^1.1.1",
    "gulp-util": "^3.0.2",
    "gulp-notify": "^2.1.0",
    "browserify": "^8.1.1",
    "watchify": "^2.2.1",
    "6to5ify": "^3.1.2",
    "uglifyify": "^3.0.1",    
    "gulp-sourcemaps": "^1.3.0"
  },
  "engine": "node 0.10.35"
}
